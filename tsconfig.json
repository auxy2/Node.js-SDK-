{
  "compilerOptions": {
   "module": "CommonJS",
   "declaration": true,
   "removeComments": true,
   "allowSyntheticDefaultImports": true,
   "target": "ES6",
   "sourceMap": false,
   "outDir": "./dist",
   "baseUrl": "./",
   "incremental": false,                              /* Skip type checking all .d.ts files. */
  },
  "include": ["src/**/*"],
  "exclude": ["node_module", "test", "lib", "**/*spec.ts"]
}
